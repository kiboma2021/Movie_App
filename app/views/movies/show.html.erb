<p style="color: green"><%= notice %></p>

<%= render @movie %>

<div>
  <%= link_to "Edit this movie", edit_movie_path(@movie) %> |
  <%= link_to "Back to movies", movies_path %>

  <%= button_to "Destroy this movie", @movie, method: :delete %>
</div>

<div id="posts">
  <% for post in @movie.posts %>
    <p>
      <%= post.post %>
      <div>
        <%= button_to "Edit", edit_movie_post_path(post) %>
        <%= button_to "Delete", @post, method: :delete %>
      </div>
    </p>
  <% end %>
</div>



<%= link_to "Add Comment", new_movie_post_path(@movie) %>
